<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="app.StudentController"
            prefHeight="400.0" prefWidth="600.0">
        <children>
            <TableView fx:id="studentsTable" layoutX="14.0" layoutY="14.0" prefHeight="350.0"
                       prefWidth="773.0">
                <columns>
                    <TableColumn id="name" fx:id="studentNameCol" prefWidth="193.25" text="Name"/>
                    <TableColumn id="studentNumber" fx:id="studentNumberCol" prefWidth="193.25"
                                 text="Student Number"/>
                    <TableColumn id="semester" fx:id="studentSemesterCol" prefWidth="193.25"
                                 text="Semester"/>
                    <TableColumn id="className" fx:id="studentClassCol" prefWidth="193.25"
                                 text="Class"/>
                </columns>
            </TableView>
            <Button layoutX="14.0" layoutY="376.0" mnemonicParsing="false" prefHeight="25.0"
                    prefWidth="95.0" text="Add student"/>
            <TextField layoutX="122.0" layoutY="376.0" prefHeight="25.0" prefWidth="160.0"
                       promptText="Enter full name"/>
            <TextField layoutX="458.0" layoutY="376.0" prefHeight="25.0" prefWidth="160.0"
                       promptText="Enter semester"/>
            <TextField layoutX="626.0" layoutY="376.0" prefHeight="25.0" prefWidth="160.0"
                       promptText="Enter class"/>
            <TextField layoutX="290.0" layoutY="376.0" prefHeight="25.0" prefWidth="160.0"
                       promptText="Enter student number"/>
            <Button layoutX="15.0" layoutY="413.0" mnemonicParsing="false" prefHeight="25.0"
                    prefWidth="95.0" text="Delete student"/>
            <TextField layoutX="123.0" layoutY="413.0" prefHeight="25.0" prefWidth="160.0"
                       promptText="Enter student number"/>
        </children>
</AnchorPane>
